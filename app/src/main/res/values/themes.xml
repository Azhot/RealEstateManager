<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.RealEstateManager" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDayColor</item>
        <item name="colorPrimaryVariant">@color/primaryDayDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDayColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDayDarkColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColorPrimary">@color/primaryDayColor</item>
        <item name="android:textColorSecondary">@color/primaryDayColor</item>
        <item name="actionMenuTextColor">@color/primaryDayColor</item>
    </style>

    <style name="BottomNavigationViewTheme">
        <item name="fontFamily">@font/robotocondensed_regular</item>
    </style>

    <style name="Theme.RealEstateManager.OpenPhoto" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryDayColor</item>
    </style>

    <style name="Theme.TransparentBottomSheetDialog" parent="Theme.RealEstateManager">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

</resources>