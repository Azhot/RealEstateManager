<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/very_large_padding"
    android:paddingBottom="@dimen/very_large_padding">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_add_realtor_dialog"
        android:textColor="@color/primaryDayColor"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/first_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/average_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginEnd="@dimen/average_margin"
        android:autofillHints=""
        android:hint="@string/hint_first_name_add_realtor_dialog"
        android:inputType="textPersonName"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/average_text_size"
        app:backgroundTint="@color/primaryDayColor"
        app:layout_constraintTop_toBottomOf="@id/title_text_view" />

    <EditText
        android:id="@+id/last_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/average_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginEnd="@dimen/average_margin"
        android:autofillHints=""
        android:hint="@string/hint_last_name_add_realtor_dialog"
        android:inputType="textPersonName"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/average_text_size"
        app:backgroundTint="@color/primaryDayColor"
        app:layout_constraintTop_toBottomOf="@id/first_name_edit_text" />

    <Button
        android:id="@+id/cancel_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/very_large_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:text="@string/cancel_button_add_realtor_dialog"
        android:textColor="@color/primaryDayColor"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/last_name_edit_text" />

    <Button
        android:id="@+id/add_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginEnd="@dimen/very_large_margin"
        android:text="@string/add_button_add_realtor_dialog"
        android:textColor="@color/primaryDayColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/last_name_edit_text" />


</androidx.constraintlayout.widget.ConstraintLayout>