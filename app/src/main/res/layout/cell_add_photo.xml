<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="@dimen/x_very_small_margin">

    <ImageView
        android:id="@+id/photo_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        tools:background="@color/primaryDayColor" />

    <TextView
        android:id="@+id/photo_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/blackTransparentBackground"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/average_padding"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/white"
        tools:text="Lounge" />

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@color/blackTransparentBackground"
        android:contentDescription="@null"
        android:src="@drawable/ic_close_24"
        android:tint="@color/white" />

</FrameLayout>